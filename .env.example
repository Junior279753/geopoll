# Configuration de l'application
PORT=3000
NODE_ENV=development

# Base de données
DB_PATH=./database/geopoll.db

# JWT Secret (générer une clé sécurisée en production)
JWT_SECRET=your_super_secret_jwt_key_here_change_in_production

# Configuration des paiements
# MTN MoMo API
MTN_API_KEY=your_mtn_api_key
MTN_API_SECRET=your_mtn_api_secret

# Moov Money API
MOOV_API_KEY=your_moov_api_key
MOOV_API_SECRET=your_moov_api_secret

# PayPal API
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_MODE=sandbox

# Configuration email (pour notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_email_password

# Configuration de sécurité
BCRYPT_ROUNDS=12
SESSION_SECRET=your_session_secret_here

# Limites de taux
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Configuration des récompenses
REWARD_AMOUNT=22500
CURRENCY=FCFA
